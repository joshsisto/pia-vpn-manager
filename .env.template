# PIA VPN Manager Configuration
# Copy this file to .env and fill in your credentials

# PIA Account Credentials
PIA_USERNAME=your_username_here
PIA_PASSWORD=your_password_here

# Default server (optional - if not set, will use random selection)
PIA_DEFAULT_SERVER=us_west

# Logging configuration
VPN_LOG_LEVEL=info
VPN_LOG_FILE=/home/josh/Sync2/projects/VPN2/pia-vpn-manager/logs/pia-vpn.log

# Network configuration
# Tailscale subnet to protect (auto-detected if not set)
TAILSCALE_SUBNET=100.64.0.0/10

# DNS servers to use when VPN is connected
PIA_DNS_SERVERS="10.0.0.242,10.0.0.243"

# OpenVPN configuration
OPENVPN_CONFIG_DIR=/home/josh/Sync2/projects/VPN2/pia-vpn-manager/configs/openvpn
OPENVPN_LOG_DIR=/home/josh/Sync2/projects/VPN2/pia-vpn-manager/logs

# Kill switch (set to true to enable)
ENABLE_KILL_SWITCH=false

# Connection timeout in seconds
CONNECTION_TIMEOUT=30